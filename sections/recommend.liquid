<div class="recommend-wrap">
  {% if section.settings.title != blank %}
    <h2 class="hometitle h4 align-center" {%- render 'animation-attrs', attrs: 'data-cc-animate' -%}>
      {{- section.settings.title | escape -}}
    </h2>
  {% endif %}

  <div class="recommend-container">
    {% for block in section.blocks %}
      {%- unless video_assets_output -%}
        <link rel="stylesheet" href="{{ 'video.css' | asset_url }}" {%- render 'lazy-stylesheet-attrs' %}>
        <script src="{{ 'video.js' | asset_url }}" defer></script>
      {%- endunless -%}

      {%- liquid
        assign video_assets_output = true

        assign using_video_tag = false
        if block.settings.video_shopify != blank
          assign using_video_tag = true
        endif

        if block.settings.placeholder_image
          assign placeholder_image = block.settings.placeholder_image
        elsif block.settings.video_shopify
          assign placeholder_image = block.settings.video_shopify.preview_image
        else
          assign placeholder_image = null
        endif

        assign autoplay = block.settings.autoplay
      -%}

      <div id="card-item">
        <div class="item-head">
          <div class="avatar">
            <img src="{{ block.settings.avatar | image_url: width: 77, height: 77 }}" loading="lazy">
            {%- render 'image' with block.settings.avatar,
              sizes: sizes,
              widths: widths,
              size_cols_desktop: size_cols_desktop,
              custom_aspect_ratio: custom_media_aspect_ratio
            -%}
          </div>
          <div class="info">
            <span>{{ block.settings.name }}</span>
            <span>*******</span>
          </div>
        </div>
        <div class="item-video">
          <div
            class="height--adapt image-overlay image-overlay--bg-no_background"
            {% if placeholder_image %}
              style="--aspect-ratio: {{ placeholder_image.aspect_ratio }}"
            {% endif %}
            {%- render 'animation-attrs', attrs: 'data-cc-animate' -%}
          >
            <div class="image-overlay__image height__image">
              <deferred-media>
                {%- if autoplay == false -%}
                  <button type="button" class="js-load-media hidden" aria-hidden="true"></button>
                {%- endif -%}
                <template>
                  <video-component
                    class="{% if using_video_tag %}has-video{% else %}has-iframe{% endif %}"
                    {%- unless using_video_tag %}
                      data-video-url="{{ section.settings.video_external | escape }}"
                    {% endunless %}
                    data-video-id="{{ section.id }}"
                    data-autoplay="{{ autoplay }}"
                    data-background="false"
                    data-description="{{ section.settings.video_description | escape }}"
                  >
                    {%- if using_video_tag -%}
                      {{
                        section.settings.video_shopify
                        | video_tag:
                          playsinline: true,
                          controls: true,
                          autoplay: autoplay,
                          muted: autoplay,
                          loop: autoplay,
                          poster: ''
                        | replace: '<img ', '<img loading="lazy" hidden '
                      }}
                    {%- else -%}
                      <div></div>
                    {%- endif -%}
                  </video-component>
                </template>
              </deferred-media>

              {% if placeholder_image %}
                {%- render 'image' with placeholder_image, class: 'video-played-hidden' -%}
              {% elsif autoplay == false %}
                <div class="placeholder-image video-played-hidden">
                  {{- 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg' -}}
                </div>
              {% endif %}
            </div>

            {%- if autoplay == false -%}
              <div class="text-overlay text-overlay--for-banner text-overlay--v-center text-overlay--h-center image-overlay__over video-played-hidden">
                <div class="text-overlay__inner">
                  <div class="text-overlay__text">
                    <video-section-play-button
                      role="button"
                      tabindex="0"
                      type="button"
                      class="button-row__btn video-section__play-btn inline-block"
                    >
                      <span class="visually-hidden">{{ 'general.icon_labels.play' | t }}</span>
                      {%- render 'icon-play' -%}
                    </video-section-play-button>
                  </div>
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>
        <div class="item-text">
          {{ block.settings.textarea }}
        </div>
      </div>
    {% endfor %}
  </div>

  <button class="carousel-btn prev-btn">&lt;</button>
  <button class="carousel-btn next-btn">&gt;</button>
</div>

<style>
  .recommend-wrap {
    margin-top: 30px;
    position: relative;
    overflow: hidden;
    width: 100%;
    max-width: 1200px;
    margin: auto;
  }

  }
  .recommend-container {
    display: flex;
    transition: transform 0.3s ease-in-out;
    width: 100%;
    max-width: 1440px;
  }

  #card-item {
    flex: 1 0 33.33%;
    box-sizing: border-box;
    padding: 10px;
    text-align: center;
    min-width: 0;
    height: 651;
  }

  @media (max-width: 768px) {
    #card-item  {
      flex: 1 0 100%;
    }
  }
  .height--adapt {
    width: 100%;
    height: 100%;
  }
  .item-head {
    width: 100%;
    display: flex;
    position: absolute;
    top: -50px;
    z-index: 1000;
  }
  .avatar {
    width: 77px;
    height: 77px;
    overflow: hidden;
    border-radius: 50%;
    margin-left: 31px;
  }
  .avatar img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .info {
    display: flex;
    flex-direction: column;
    margin-left: 16px;
  }
  .item-video {
    width: 100%;
    height: 312px;
    border-radius: 20px 20px 0 0;
    overflow: hidden;
  }
  .item-text {
    flex: 1;
    padding: 28px;
    background: #f5f5f7;
    box-sizing: border-box;
    word-wrap: break-word;
    border-radius: 0 0 20px 20px;
  }
  .carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    padding: 10px 15px;
    cursor: pointer;
  }

  .prev-btn {
    left: 10px;
  }

  .next-btn {
    right: 10px;
  }
</style>

<script>
  {% comment %} document.addEventListener('DOMContentLoaded', function () {
    const track = document.querySelector('.recommend-containe');
    const prevBtn = document.querySelector('.prev-btn');
    const nextBtn = document.querySelector('.next-btn');
    const items = document.querySelectorAll('.card-item');
    let currentIndex = 0;

    const updateCarousel = function () {
      const itemWidth = items[0].offsetWidth; // 获取单个 item 的宽度
      track.style.transform = `translateX(-${currentIndex * itemWidth}px)`;
      console.log('进来了吗');
    };

    prevBtn.addEventListener('click', function () {
      currentIndex = Math.max(0, currentIndex - 1); // 防止越界
      updateCarousel();
    });

    nextBtn.addEventListener('click', function () {
      currentIndex = Math.min(items.length - 1, currentIndex + 1); // 防止越界
      updateCarousel();
    });

    // 在窗口调整大小时重新计算布局
    window.addEventListener('resize', updateCarousel);
  }); {% endcomment %}
</script>

