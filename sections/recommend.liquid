<div class="recommend-wrap">
    <div class="container">
    {% for block in section.blocks %}
        {% render 'card-recommend-item', block: block.settings  %}
    {% endfor %}
    </div>
</div>

<style>
    .recommend-wrap{
        display: flex;
        justify-content: center;
    }
    .container{
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
        grid-gap: 10px;
        max-width: 1440px;
        margin: 0 auto;
    }
</style>

{% schema %}
{
  "name": "Recommend",
  "settings": [],
  "blocks":[
    {
        "type": "custom",
        "name": "Recommend Crad",
        "settings": [
            {
                "type": "image_picker",
                "label": "Avatar Image",
                "id": "avatar",
            },
            {
                "type": "text",
                "label": "Name",
                "id": "name",
                "default": "David"
            },
            {
                "type": "image_picker",
                "label": "Cover Image",
                "id": "cover",
            },
            {
                "type": "textarea",
                "label": "Textarea",
                "id": "textarea",
                "default": "xxxxxxx"
            },
            {
                "type": "url",
                "label": "Url",
                "id": "url",
            }
        ]
      }
  ],
  "presets": [
    {
        "name": "Recommend",
        "blocks": [
            {
                "type": "custom",
            },
            {
                "type": "custom",
            },
            {
                "type": "custom",
            },
            {
                "type": "custom",
            },
          ]
    },
    
  ]
}
{% endschema %}
