<div class="recommend-wrap">
    {% for block in section.blocks %}
        {% render 'card-recommend-item', card: {
            text:'11123'
        } %}
    {% endfor %}
</div>

<style>
    .recommend-wrap{
        max-width: 1440px;
        display: flex;
    }
</style>

{% schema %}
{
  "name": "Recommend",
  "settings": [
    {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
  ],
  "blocks":[
    {
        "type": "text_block",
        "name": "Text Block",
        "settings": [
          {
            "type": "text",
            "label": "Text",
            "id": "text_content",
            "default": "Sample Text"
          }
        ]
      },
  ],
  "presets": [
    {
        "name": "Recommend",
    }
  ]
}
{% endschema %}
