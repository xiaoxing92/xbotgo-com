<div class="recommend-wrap">
    {% for block in section.blocks %}
        {% render 'card-recommend-item', card: {
            avatar:block.settings.avatar,
            name:block.settings.name,
            cover:block.settings.cover,
            textarea:block.settings.textarea,
            url:block.settings.url
        } %}
    {% endfor %}
</div>

<style>
    .recommend-wrap{
        max-width: 1440px;
        display: flex;
    }
</style>

{% schema %}
{
  "name": "Recommend",
  "settings": [
  ],
  "blocks":[
    {
        "type": "custom",
        "name": "Recommend Crad",
        "settings": [
            {
                "type": "image_picker",
                "label": "Avatar",
                "id": "avatar",
            },
            {
                "type": "text",
                "label": "Name",
                "id": "name",
                "default": "David"
            },
            {
                "type": "image_picker",
                "label": "Cover",
                "id": "cover",
            },
            {
                "type": "textarea",
                "label": "Textarea",
                "id": "textarea",
            },
            {
                "type": "url",
                "label": "Url",
                "id": "url",
            }
        ]
      }
  ],
  "presets": [
    {
        "name": "Recommend",
    }
  ]
}
{% endschema %}
