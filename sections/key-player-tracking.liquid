  display: flex;
  flex-direction: column;
  width: 100%;
  max-width: 1200px;
}
.col-top{
  flex: 1;
}
.col-bot {
}
.image-box {
  margin-bottom: 10px;
}
.image-box img {
  width: 100%;
  height: auto;
}
