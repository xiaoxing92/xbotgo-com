<link rel="stylesheet" href="{{ 'custom-tab-4.css' | asset_url }}" type="text/css">

<div class="main-tab-container4">
    <div class="tab-title4">{{ section.settings.tab-title }}</div>
    <div id="tabs4" class="tab-container4">
        <div class="tab4 active" onclick="showTab4(0)">{{ section.settings.tab1 }}</div>
        <div class="tab4" onclick="showTab4(1)">{{ section.settings.tab2 }}</div>
        <div class="tab4 " onclick="showTab4(2)">{{ section.settings.tab3 }}</div>
        <div class="tab4" onclick="showTab4(3)">{{ section.settings.tab4 }}</div>
    </div>
    <div class="tab-content-container4 active">
        <div class="video-container4">
            <iframe src="https://www.youtube.com/embed?video_id={{ section.settings.video_url1 }}" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="text-container4">
            <div class="text-image4">
                <img src="{{ section.settings.image1 | img_url: '600x300'}}"></img>
            </div>
            <div class="text-c4">
                <b>{{ section.settings.tab-txt-title1 }}</b><br/>
                <span>
                    {{ section.settings.tab-txt-content1 }}
                </span>
            </div>
        </div>
    </div>
    <div class="tab-content-container4">
        <div class="video-container4">
            <iframe src="https://www.youtube.com/embed?video_id={{ section.settings.video_url2 }}" frameborder="0" allowfullscreen></iframe>
        </div>
