        </div>
        <div class="text-container4">
            <div class="text-image4">
                <img src="{{ section.settings.image3 | img_url: '600x300'}}"></img>
            </div>
            <div class="text-c4">
                <b>{{ section.settings.tab-txt-title3 }}</b><br/>
                <span>{{ section.settings.tab-txt-content3 }}</span>
            </div>
        </div>
    </div>

    <div class="tab-content-container4">
        <div class="video-container4">
            <iframe src="https://www.youtube.com/embed?video_id={{ section.settings.video_url4 }}" frameborder="0" allowfullscreen></iframe>
        </div>
        <div class="text-container4">
            <div class="text-image4">
                <img src="{{ section.settings.image4 | img_url: '600x300'}}"></img>
            </div>
            <div class="text-c4">
                <b>{{ section.settings.tab-txt-title4 }}</b><br/>
                <span>{{ section.settings.tab-txt-content4 }}</span>
            </div>
        </div>
    </div>
</div>

<script>
    function showTab4(index) {
        var tabs = document.getElementById('tabs4').getElementsByTagName('div');
        var tabContent = document.getElementsByClassName('tab-content-container4');
        for (var i = 0; i < tabs.length; i++) {
            tabs[i].classList.remove('active');
            tabContent[i].classList.remove('active');
        }
        tabs[index].classList.add('active');
        tabContent[index].classList.add('active');
    }  
</script>
