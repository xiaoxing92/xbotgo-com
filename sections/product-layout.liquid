<style>
  .section-mobile {
    display: none;
  }
  .layout-flex {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  .product-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1;
    background: #dfe0e3;
    border-radius: 20px;
    height: 362px;
    overflow: hidden;
  }

  .product-introduce {
    width: 100%;
    text-align: center;
    padding: 10px;
  }
  .third-product-introduce {
    width: 60%;
    padding: 20px 20px 20px 10%;
  }
  .pay-button {
    padding: 7px 25px;
    background: #000000;
    border-radius: 24px;
    white-space: nowrap;
    color:#fff;
  }
  .single-column {
    display: flex;
    align-items: center;
    width: 100%;
    height: 204px;
    background: #dfe0e3;
    border-radius: 20px;
    overflow: hidden;
  }
  .product-img {
    height:142px;
  }

  @media (max-width: 768px) {
    .text-overlay__title{
      font-size:15px;
    }
    .section-pc {
      display: none;
    }

    .section-mobile {
      display: block;
    }

    .product-box {
      display: flex;
      justify-content: center;
      align-items: center;
      background: #fff;
      flex:1;
      width:100%;
      height: 100%;
      text-align: center;
      
    }
    .pay-button {
      background: linear-gradient(to right, #f27b00, #ca251d);
      width: 100px;
      text-align: center;
      font-size: 9px;
    }
    .third-product-introduce {
      flex:1;
      padding: 20px 20px 20px 5%;
    }
    .product-item {
      height: auto;
      background: #f5f5f5;
      border:1px solid #DFDFDF;
    }
    .single-column {
      background: #f5f5f5;
      border:1px solid #DFDFDF;
      border-radius: 20px;
      height:auto;
      overflow: hidden;
    }
    .product-introduce{
      text-align: left;
    }
    .product-img{
      width:auto;
      height:100px;
    }
  }
</style>

{% schema %}
{
  "name": "Product Layout",
  "class": "section-product-layout",
  "max_blocks": 3,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Product Layout"
    }
  ],
  "blocks": [
    {
      "type": "text_block",
      "name": "Product",
      "settings": [
        {
          "type": "text",
          "id": "custom_div_width",
          "label": "Width % unit",
          "default": "50"
        },
        {
          "type": "text",
          "id": "custom_div_height",
          "label": "Height px unit"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "id": "video_shopify",
          "type": "video",
          "label": "Video upload",
          "info": "Hosted by Shopify. Video will autoplay and be muted."
        },
        {
          "type": "checkbox",
          "id": "enlarge_media",
          "label": "Enlarge media",
          "default": false
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "info": "Enter <br> for a line-break",
          "default": "Tell your story"
        },
        {
          "type": "text",
          "id": "subheading",
          "label": "Subheading",
          "default": "Gallery"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button",
          "default": "Buy Now"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Layout",
      "blocks": [
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        },
        {
          "type": "text_block"
        }
      ]
    }
  ]
}
{% endschema %}
