{%- for block in section.blocks -%}
  {%- if block.settings.video_shopify != blank -%}
    <link rel="stylesheet" href="{{ 'video.css' | asset_url }}" {%- render 'lazy-stylesheet-attrs' %}>
    <script src="{{ 'video.js' | asset_url }}" defer></script>
    {%- break -%}
  {%- endif -%}
{%- endfor -%}

<div id="section-id-{{ section.id }}" class="section-pc">
  {% if section.settings.title != blank %}
    <h2 class="hometitle h4 align-center" {%- render 'animation-attrs', attrs: 'data-cc-animate' -%}>
      {{- section.settings.title | escape -}}
    </h2>
  {% endif %}

  <div class="container layout-flex">
    {% assign first_block = section.blocks[0] %}
    {% if first_block %}
      <div class="product-item">
        <div class="product-introduce">
          <h2 class="text-overlay__title h4">{{ first_block.settings.title  | t  }}</h2>
          {% if first_block.settings.subheading != blank %}
            <p>{{ first_block.settings.subheading  | t }}</p>
          {% endif %}
          <button class="pay-button">{{ first_block.settings.button_label | t }}</button>
        </div>
        <img class="product-img" src="{{ first_block.settings.image | img_url: '230x100' }}" />
      </div>
    {% endif %}

    {% assign second_block = section.blocks[1] %}
    {% if second_block %}
      <div class="top-info product-item">
        <div class="product-introduce">
          <h2 class="text-overlay__title h4">{{ second_block.settings.title }}</h2>
          {% if second_block.settings.subheading != blank %}
            <p>{{ second_block.settings.subheading }}</p>
          {% endif %}
          <button class="pay-button">{{ second_block.settings.button_label }}</button>
        </div>
        <img class="product-img" src="{{ second_block.settings.image | img_url: '230x100' }}">
      </div>
    {% endif %}

    {% assign third_block = section.blocks[2] %}
    {% if third_block %}
      <div class="single-column">
        <div class="third-product-introduce">
          <h2 class="text-overlay__title h4">{{ third_block.settings.title }}</h2>
          {% if third_block.settings.subheading != blank %}
            <p>{{ third_block.settings.subheading }}</p>
          {% endif %}
          <button class="pay-button">{{ third_block.settings.button_label }}</button>
        </div>
        <img class="product-img" src="{{ third_block.settings.image | img_url: '230x100' }}" />
      </div>
    {% endif %}
  </div>
</div>

