<div
  id='section-id-{{ section.id }}'
  class='container fully-spaced-row--medium cf section-id-{{ section.id }}'
  data-section-type='custom-row'
>
  {% if section.settings.title != blank %}
    <h2
      class='hometitle h4 align-center spaced-row'
      {%- render 'animation-attrs', attrs: 'data-cc-animate data-cc-animate-delay="0.15s"' -%}
    >
      {{ section.settings.title | escape }}
    </h2>
  {% endif %}
  <div class='wrap'>
    {% for block in section.blocks %}
      {% if block.type == 'custom_row_block' %}
        <div class='item-row'>
          {{ block.settings.subheading }}
        </div>
      {% elsif block.type == 'custom_column_block' %}
        <div class='item-column'>
          <div class='child-item-column'>
            {{ block.settings.subheading }}
          </div>
          <div class='child-item-column'>title</div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

<style>
  .wrap {
    display: flex;
    gap: 20px;
    height: 520px;
  }
  .item-row {
    display: flex;
    justify-content: center;
    align-items: end;
    width: 33%;
    border-radius: 16px;
    background: #fff;
    padding:10px;
  }
  .item-column {
    width: 33%;
    display: flex;
    border-radius: 16px;
    flex-direction: column;
    gap: 20px;
  }
  .child-item-column {
    display: flex;
    align-items: center;
    width: 100%;
    height: 50%;
    background: #fff;
    border-radius: 16px;
  }
</style>
