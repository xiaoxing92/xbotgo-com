<div class="key-player-tracking">
  <div class="row">
    <div class="col-left">
      <div class="image-box">
        <img src="{{ section.settings.image_1 | img_url: 'large' }}" alt="Main Image">
      </div>
      <div class="content-box">
        <h3>{{ section.settings.title_1 }}</h3>
        <p>{{ section.settings.description_1 }}</p>
      </div>
    </div>
    <div class="col-right">
      <div class="image-grid">
        <div class="grid-item">
          <img src="{{ section.settings.image_2 | img_url: 'large' }}" alt="Image 2">
          <p>{{ section.settings.title_2 }}</p>
        </div>
        <div class="grid-item">
          <img src="{{ section.settings.image_3 | img_url: 'large' }}" alt="Image 3">
        </div>
        <div class="grid-item">
          <img src="{{ section.settings.image_4 | img_url: 'large' }}" alt="Image 4">
        </div>
      </div>
      <div class="content-box">
        <h3>{{ section.settings.title_3 }}</h3>
        <p>{{ section.settings.description_3 }}</p>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Key Player Tracking",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title 1",
      "default": "Jersey number recognition"
    },
    {
      "type": "textarea",
      "id": "description_1",
      "label": "Description 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title 2",
      "default": "Gesture Recognize"
    },
    {
      "type": "image_picker",
      "id": "image_3",
      "label": "Image 3"
    },
    {
      "type": "image_picker",
      "id": "image_4",
      "label": "Image 4"
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "Title 3",
      "default": "Followme Mode"
    },
    {
      "type": "textarea",
      "id": "description_3",
      "label": "Description 3"
    }
  ],
  "blocks": [],
  "presets": [
    {
        "name": "Key Player Tracking",
        "category": "Custom"
      }
  ]
}
{% endschema %}


<style>
.key-player-tracking {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin: 20px 0;
}
.row {
  display: flex;
  width: 100%;
  max-width: 1200px;
}
.col-left, .col-right {
  flex: 1;
}
.image-box {
  margin-bottom: 10px;
}
.image-box img {
  width: 100%;
  height: auto;
}
.image-grid {
  display: flex;
  gap: 10px;
}
.grid-item {
  flex: 1;
}
.grid-item img {
  width: 100%;
  height: auto;
}
.content-box {
  padding: 10px;
}
h3 {
  font-size: 18px;
  font-weight: bold;
}
p {
  font-size: 14px;
}
</style>
