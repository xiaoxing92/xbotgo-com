      "id": "trigger",
      "label": "Show trigger",
      "info": "\"Exit intent\" will show the popup when the user moves the cursor as if they're about to exit the site. Does not work on mobile.",
      "options": [
        {
          "value": "delay",
          "label": "Delay"
        },
        {
          "value": "exit",
          "label": "Exit intent"
        }
      ],
      "default": "delay"
    },
    {
      "type": "range",
      "id": "delay",
      "label": "Delay seconds",
      "info": "Only applies when the \"Trigger\" is \"Delay\".",
      "default": 5,
      "min": 0,
      "max": 30,
      "step": 1,
      "unit": "s"
    },
    {
      "type": "header",
      "content": "Visibility"
    },
    {
      "type": "checkbox",
      "id": "show_to_guests_only",
