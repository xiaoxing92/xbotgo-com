
<div id="section-id-{{ section.id }}" class="container pc">
  {% if section.settings.title != blank %}
    <h2 class="hometitle h4 align-center" {%- render 'animation-attrs', attrs: 'data-cc-animate' -%}>
      {{- section.settings.title | escape -}}
    </h2>
  {% endif %}

  <div class="card-top">
    <div class="full-span">{{ section.settings.rich_text }}</div>
    <div class="card w20">
      <img src="{{ section.settings.image_1 | img_url: '1024x1024' }}" alt="{{ section.settings.title_1  }}">
      <div class="overlay-text">{{  section.settings.title_1   }}</div>
    </div>
    <div class="card w30">
      <img src="{{ section.settings.image_2 | img_url: '1024x1024' }}" alt="{{ section.settings.title_2 }}">
      <div class="overlay-text">{{  section.settings.title_2   }}</div>
    </div>
  </div>
  <div class="card-bot">
    <div class="card">
      <img src="{{ section.settings.image_3 | img_url: '1024x1024' }}" alt="{{ section.settings.title_3  }}">
      <div class="overlay-text">{{  section.settings.title_3   }}</div>
    </div>

    <div class="card w30">
      <img src="{{ section.settings.image_4 | img_url: '1024x1024' }}" alt="{{ section.settings.title_4 }}">
      <div class="overlay-text">{{  section.settings.title_4   }}</div>
    </div>
  </div>
</div>


<div id="section-id-{{ section.id }}" class="container mobile">
  {% if section.settings.title != blank %}
    <h2 class="hometitle h4 align-center" {%- render 'animation-attrs', attrs: 'data-cc-animate' -%}>
      {{- section.settings.title | escape -}}
    </h2>
  {% endif %}
  <div class="card-top">
    <div class="full-span">{{ section.settings.rich_text }}</div>
    <div class="card-m w50">
      <img src="{{ section.settings.image_1 | img_url: '375x375' }}" alt="{{ section.settings.title_1  }}">
      <div class="overlay">{{  section.settings.title_1   }}</div>
    </div>
  </div>
  <div class="card-bot">
    <div class="card-m w50">
      <img src="{{ section.settings.image_2 | img_url: '375x375' }}" alt="{{ section.settings.title_2 }}">
      <div class="overlay">{{  section.settings.title_2   }}</div>
    </div>
    <div class="card-bpt-r">
      <div class="card-m">
        <img src="{{ section.settings.image_3 | img_url: '375x375' }}" alt="{{ section.settings.title_3 }}">
        <div class="overlay">{{  section.settings.title_3   }}</div>
      </div>
      <div class="card-m">
        <img src="{{ section.settings.image_4 | img_url: '375x375' }}" alt="{{ section.settings.title_4 }}">
        <div class="overlay">{{  section.settings.title_4   }}</div>
      </div>
    </div>
  </div>
</div>

<style>
  .mobile{
    display:none
  }
  .card-top,
  .card-bot {
    display: flex;

    gap: 10px;
    padding-bottom: 20px;
  }
  .full-span {
    flex:1;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    background-color: #f0f0f0;
    border-radius: 12px;
  }

  .card {
    flex: 1;
    position: relative;
    overflow: hidden;
    border-radius: 12px;
  }

  .w20 {
    flex:none;
    width: 20%;
  }  

  .w30{
    flex:none;
    width: 30%;
  }
  .w50{
    width: 50%;
  }
  .card img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .card .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    padding: 10px;
    text-align: center;
  }

  .card-m{
    position: relative;
    overflow: hidden;
    border-radius: 12px;
  }

  .card-m img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .card-m .overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.6);
    color: #fff;
    padding: 10px;
    text-align: center;
  }

  .card-bpt-r{
    display: flex;
    flex-direction: column;
    width: 50%;
    gap:10px;
  }
  
   @media (max-width: 768px) {
    .full-span {
      width: 50%;
    }
    .pc{
      display:none;
    }
    .mobile{
      display:block
    }
  } 
</style>

