  "name": "Grid Image Layout",
  "class": "section-image-layout",
  "disabled_on": {
    "groups": ["aside"]
  },
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Grid Image Layout"
    },
    {
      "type": "textarea",
      "id": "rich_text",
      "label": "Rich Text Content",
      "default": "You can input rich HTML or text here."
    },
    {
      "type": "text",
      "id": "title_1",
      "label": "Title1",
      "default": "Title1"
    },
    {
      "type":"image_picker",
      "id": "image_1",
      "label": "Image 1",
    },
    {
      "type": "text",
      "id": "title_2",
      "label": "Title2",
      "default": "Title2"
    },
    {
      "type":"image_picker",
      "id": "image_2",
      "label": "Image 2",
    },
    {
      "type": "text",
      "id": "title_3",
      "label": "Title3",
      "default": "Title3"
    },
    {
      "type":"image_picker",
      "id": "image_3",
      "label": "Image 3",
    },
    {
      "type": "text",
      "id": "title_4",
      "label": "Title4",
      "default": "Title4"
    },
    {
      "type":"image_picker",
      "id": "image_4",
      "label": "Image 4",
    }
  ],
  "presets": [
    {
      "name": "Grid Image Layout",
      "settings": {}
    }
  ]
}
{% endschema %}
